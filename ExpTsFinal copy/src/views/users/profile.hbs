<div class="container py-4" style="max-width: 800px;">
  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0">üë§ Minha Conta</h4>
        </div>
        <div class="card-body">
          <p><strong>Nome:</strong> {{user.fullName}}</p>
          <p><strong>Email:</strong> {{user.email}}</p>
          <p><strong>Curso:</strong> {{user.major.code}} - {{user.major.name}}</p>

          <div class="d-flex gap-2 mt-4">
            <a href="/users/edit/{{user.id}}" class="btn btn-outline-primary">Editar Dados</a>
            <button 
              class="btn btn-outline-danger"
              data-bs-toggle="modal" 
              data-bs-target="#confirmUserDeleteModal"
              data-id="{{user.id}}"
              data-name="{{user.fullName}}"
            >
              Excluir Conta
            </button>
          </div>

          <div class="mt-3">
            <a href="/users/logout" class="btn btn-link">Sair da conta</a>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0">üéÆ Estat√≠sticas do Jogo</h4>
        </div>
        <div class="card-body">
          <div id="gameStats">
            <div class="text-center">
              <div class="spinner-border spinner-border-sm" role="status">
                <span class="visually-hidden">Carregando...</span>
              </div>
              <p class="text-muted mt-2">Carregando estat√≠sticas...</p>
            </div>
          </div>
          
          <div class="mt-3 text-center">
            <a href="/" class="btn btn-success">üöÄ Jogar Agora</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal de Confirma√ß√£o de Exclus√£o -->
<div class="modal fade" id="confirmUserDeleteModal" tabindex="-1" aria-labelledby="confirmUserDeleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="userDeleteForm" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="confirmUserDeleteModalLabel">Confirmar Exclus√£o</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
        </div>
        <div class="modal-body">
          <p>Deseja realmente excluir sua conta <strong id="userNameInModal">...</strong>?</p>
          <p class="text-danger"><small>Esta a√ß√£o n√£o pode ser desfeita e todos os seus dados ser√£o perdidos.</small></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancelar</button>
          <button type="submit" class="btn btn-danger btn-sm">Confirmar Exclus√£o</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
// Carregar estat√≠sticas do jogo
async function loadGameStats() {
  try {
    const response = await fetch('/api/game/user-stats');
    const stats = await response.json();
    
    const statsElement = document.getElementById('gameStats');
    
    if (stats.error) {
      statsElement.innerHTML = '<p class="text-danger mb-0">Erro ao carregar estat√≠sticas.</p>';
      return;
    }
    
    statsElement.innerHTML = `
      <div class="row text-center">
        <div class="col-4">
          <div class="border rounded p-2">
            <div class="h4 text-primary">${stats.totalGames}</div>
            <small class="text-muted">Jogos</small>
          </div>
        </div>
        <div class="col-4">
          <div class="border rounded p-2">
            <div class="h4 text-success">${stats.bestScore}</div>
            <small class="text-muted">Melhor Score</small>
          </div>
        </div>
        <div class="col-4">
          <div class="border rounded p-2">
            <div class="h4 text-info">${stats.averageScore}</div>
            <small class="text-muted">Score M√©dio</small>
          </div>
        </div>
      </div>
    `;
  } catch (error) {
    console.error('Erro ao carregar estat√≠sticas:', error);
    document.getElementById('gameStats').innerHTML = 
      '<p class="text-danger mb-0">Erro ao carregar estat√≠sticas.</p>';
  }
}

// Carregar estat√≠sticas quando a p√°gina carrega
document.addEventListener('DOMContentLoaded', function() {
  loadGameStats();
});
</script>