<div class="container py-4" style="max-width: 700px;">

  <h1 class="mb-4 fw-light text-center">Cursos Cadastrados</h1>

  <div class="mb-3 text-center">
    <a href="/majors/create" class="btn btn-outline-primary btn-sm">+ Novo Curso</a>
  </div>

  {{#if majors.length}}
    <div class="list-group">
      {{#each majors}}
        <div class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong>{{this.code}}</strong> – {{this.name}}
          </div>
          <div class="d-flex gap-2">
            <a href="/majors/{{this.id}}" class="text-decoration-none text-secondary">Detalhes</a>
            <a href="/majors/edit/{{this.id}}" class="text-decoration-none text-warning">Editar</a>
            <button
              type="button"
              class="btn btn-link btn-sm text-danger p-0 m-0"
              data-bs-toggle="modal"
              data-bs-target="#confirmDeleteModal"
              data-id="{{this.id}}"
              data-name="{{this.name}}"
            >
              Excluir
            </button>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <p class="text-muted text-center">Nenhum curso cadastrado ainda.</p>
    <p class="text-muted text-center">Clique em “Novo Curso” para adicionar o primeiro.</p>
  {{/if}}

</div>

<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="deleteForm" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmar Exclusão</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
        </div>
        <div class="modal-body">
          <p>Deseja realmente excluir o curso <strong id="modalCourseName">...</strong>?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancelar</button>
          <button type="submit" class="btn btn-danger btn-sm">Confirmar</button>
        </div>
      </form>
    </div>
  </div>
</div>

